{
  "manifest_version": 2,
  "name": "Metronome",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "metronome.png",
    "default_popup": "/popup/popup.html"
  },

  "icons": {
    "32": "metronome.png"
  },

  "permissions": [
    "activeTab",
    "notifications"
  ]
}